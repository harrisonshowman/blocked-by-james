{
  "manifest_version": 3,
  "name": "Blocked by James",
  "version": "1.0",
  "description": "Blocks ads and shows LeBron's legendary block.",
  "permissions": ["scripting", "webRequest", "webRequestBlocking", "tabs"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["block.gif"],
    "matches": ["<all_urls>"]
  }]
}
